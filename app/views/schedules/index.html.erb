<% title "Schedules" %>

<table>
  <tr>
    <th>Route</th>
    <th>Trip</th>
    <th>Stop Sequence</th>
    <th>Stop</th>
    <th>Arrival Time</th>
  </tr>
  <% for schedule in @schedules %>
    <tr>
      <td><%= schedule.route_id %></td>
      <td><%= schedule.trip_id %></td>
      <td><%= schedule.stop_sequence %></td>
      <td><%= schedule.stop_id %></td>
      <td><%= schedule.arrival_time %></td>
      <td><%= link_to "Show", schedule %></td>
      <td><%= link_to "Edit", edit_schedule_path(schedule) %></td>
      <td><%= link_to "Destroy", schedule, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Schedule", new_schedule_path(schedule) %></p>
